@page "/browse"
@using BlazorChatApp.Client.Components.Browse
@attribute [Authorize]

<div class="container p-5">
    <div class="container">
        <h2>Browse</h2>
        <div class="form-group">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Enter room name" />
                <button class="btn btn-p input-group-append">Search</button>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <button class="btn btn-p">Create a Room</button>
            </div>

        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var room in rooms)
            {
                <div class="col-6"><RoomSearchResult RoomName=@room.ChatRoomName IsPrivate=@room.IsPrivate RoomSize=@room.RoomSize /></div>
            }
        </div>


    </div>
</div>




